<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <TextView
        android:layout_marginTop="15dp"
        android:gravity="center"
        android:text="请输入服务器地址："
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edit_main"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_margin="20dp"
        android:textColor="@color/black"
        android:background="@drawable/edit_radio_edit"
        android:paddingLeft="10dp"
        android:textSize="13sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bule_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/cmbkb_white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_btn_yes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bule_main_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/cmbkb_white"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>