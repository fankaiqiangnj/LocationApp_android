<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="240dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:text="工单IP："
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_gravity="center"
            android:layout_weight="1"
            android:id="@+id/edit_main"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:textColor="@color/black"
            android:layout_width="match_parent"
            android:background="@drawable/edit_radio_edit"
            android:paddingLeft="5dp"
            android:textSize="13sp"/>

    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:gravity="center"
            android:layout_gravity="center"
            android:text="工单端口："
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:layout_weight="1"
            android:id="@+id/edit_port"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_margin="10dp"
            android:inputType="number"
            android:textColor="@color/black"
            android:background="@drawable/edit_radio_edit"
            android:paddingLeft="5dp"
            android:textSize="13sp"/>

    </LinearLayout>




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txt_btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bule_bg"
            android:gravity="center"
            android:text="取消"
            android:textColor="@color/cmbkb_white"
            android:textSize="14sp"/>

        <TextView
            android:id="@+id/txt_btn_yes"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_weight="1"
            android:background="@drawable/bule_main_bg"
            android:gravity="center"
            android:text="确定"
            android:textColor="@color/cmbkb_white"
            android:textSize="14sp"/>
    </LinearLayout>

</LinearLayout>